<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TituloApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Control FRDM-KL 46Z"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            //Inicio Card 1

            <androidx.cardview.widget.CardView
                android:id="@+id/Card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TituloApp"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    //Titulo card1

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Estados de Switchs"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    //SwitchLed1

                    <Switch
                        android:id="@+id/Switch1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:enabled="false"
                        android:text="Switch 1"
                        android:textColor="@color/md_grey_600"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    //Switch2

                    <Switch
                        android:id="@+id/Switch2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:enabled="false"
                        android:text="Switch 2"
                        android:textColor="@color/md_grey_600"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            //Fin Card 1

            <LinearLayout
                android:id="@+id/SecPot"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/Card1"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                //Inicio Card2

                <androidx.cardview.widget.CardView
                    android:id="@+id/Card2"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="vertical"
                    app:cardCornerRadius="20dp">

                    //Inicio GaugeLuz

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        //Titulo Gauge Luz

                        <TextView
                            android:id="@+id/TituloGaugeLuz"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:text="Cantidad de Luz (%)"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <pl.pawelkleczkowski.customgauge.CustomGauge
                            android:id="@+id/GaugeLuz"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/TituloGaugeLuz"
                            android:layout_centerHorizontal="true"
                            android:padding="10dp"
                            app:gaugeEndValue="100"
                            app:gaugePointEndColor="@color/md_blue_800"
                            app:gaugePointStartColor="@color/md_blue_300"
                            app:gaugeStartAngle="135"
                            app:gaugeStartValue="0"
                            app:gaugeStrokeCap="ROUND"
                            app:gaugeStrokeColor="@color/md_grey_400"
                            app:gaugeStrokeWidth="10dp"
                            app:gaugeSweepAngle="270" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ValueGaugeLuz"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="145dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    //Fin Gauge Luz

                </androidx.cardview.widget.CardView>

                //Fin Card2
                //Inicio Card3

                <androidx.cardview.widget.CardView
                    android:id="@+id/Card3"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="vertical"
                    app:cardCornerRadius="20dp">

                    //Inicio GaugeAceleracion

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        //Titulo GaugeAceleracion

                        <TextView
                            android:id="@+id/TituloGaugeAceleracion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:text="AceleraciÃ³n (m/Seg2)"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold" />


                        <pl.pawelkleczkowski.customgauge.CustomGauge
                            android:id="@+id/GaugeAceleracion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/TituloGaugeAceleracion"
                            android:layout_centerHorizontal="true"
                            android:padding="10dp"
                            app:gaugeEndValue="100"
                            app:gaugePointEndColor="@color/md_green_800"
                            app:gaugePointStartColor="@color/md_green_300"
                            app:gaugeStartAngle="135"
                            app:gaugeStartValue="0"
                            app:gaugeStrokeCap="ROUND"
                            app:gaugeStrokeColor="@color/md_grey_400"
                            app:gaugeStrokeWidth="10dp"
                            app:gaugeSweepAngle="270" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ValueGaugeAceleracion"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:paddingTop="145dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold" />


                    </LinearLayout>
                    //Fin GaugeAceleracion

                </androidx.cardview.widget.CardView>

                //Fin Card3

                //Inicio Card4


                // Fin Card4
            </LinearLayout>

            //Inicio Card5

            <androidx.cardview.widget.CardView
                android:id="@+id/Card5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/SecPot"
                android:layout_margin="10dp"
                android:background="@color/colorPrimaryDark"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    //Titulo Card5

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Temperatura Raspberry"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textTempRpi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="__._Â°C"
                            android:textSize="40dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:src="@drawable/termometro"/>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            //Fin card5

            //Inicio card6

            <androidx.cardview.widget.CardView
                android:id="@+id/Card6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Card5"
                android:layout_margin="10dp"
                android:background="@color/colorPrimaryDark"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    //Titulo card6

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Distancia Sensada"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textDistanciaSensada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="__._Cm"
                            android:textSize="40dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:src="@drawable/regla"/>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            //Fin Card6

            // Inicio Card7

            <androidx.cardview.widget.CardView
                android:id="@+id/Card7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Card6"
                android:layout_margin="10dp"
                android:background="@color/colorPrimaryDark"
                app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        //Titulo para Card 8

                        <TextView
                            android:id="@+id/TituloLedVerde"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:text="Led Verde"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/valueTitulopul"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:paddingTop="15dp"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            // Fin card 7

            // Inicio car 8, 9 y 10

            <androidx.cardview.widget.CardView
                android:id="@+id/Card8"
                android:layout_below="@id/Card7"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:background="@color/colorPrimaryDark"
                app:cardCornerRadius="10dp">

                //Inicio Boton ON Verde
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    //Boton ON Verde

                    <Button
                        android:id="@+id/EncenderLedVerde"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="0dp"
                        android:layout_marginBottom="0dp"
                        android:text="ON"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            //Fin Card 8

            // Inicio Card9

        <androidx.cardview.widget.CardView
            android:id="@+id/Card9"
            android:layout_below="@id/Card7"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="140dp"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark"
            app:cardCornerRadius="20dp">

        //Inicio Boton OFF Verde
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            //Boton OFF Verde

                    <Button
                        android:id="@+id/ApagarLedVerde"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="0dp"
                        android:layout_marginBottom="0dp"
                        android:text="OFF"/>

                </RelativeLayout>

        </androidx.cardview.widget.CardView>
            // Fin card 9

            // Inicio Card 10
            <androidx.cardview.widget.CardView
                android:id="@+id/Card10"
                android:layout_below="@id/Card7"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="280dp"
                android:orientation="vertical"
                android:background="@color/colorPrimaryDark"
                app:cardCornerRadius="10dp">

                //Inicio Botn toggle verde
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    //Boton toggle Verde

                    <Button
                        android:id="@+id/ToggleLedVerde"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="0dp"
                        android:layout_marginBottom="0dp"
                        android:text="TOGGLE"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            //Fin Card 10

            // Inicio Card 11
            // Boton Rojo

            <androidx.cardview.widget.CardView
                android:id="@+id/Card11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Card10"
                android:layout_margin="10dp"
                android:background="@color/colorPrimaryDark"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TituloLedRojo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:text="Led Rojo"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/valueTituloLedRojo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:paddingTop="15dp"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            // Fin card 11

            // Inicio card 12, 13 y 14

            <androidx.cardview.widget.CardView
                android:id="@+id/Card12"
                android:layout_below="@id/Card11"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/EncenderLedRojo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="0dp"
                        android:layout_marginBottom="0dp"
                        android:text="ON"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            //Fin Card 12

            // Inicio card 13

            <androidx.cardview.widget.CardView
                android:id="@+id/Card13"
                android:layout_below="@id/Card11"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="140dp"
                android:orientation="vertical"
                android:background="@color/colorPrimaryDark"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/ApagarLedRojo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="0dp"
                        android:layout_marginBottom="0dp"
                        android:text="OFF"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            // Fin card 13

            // Inicio Card 14
            <androidx.cardview.widget.CardView
                android:id="@+id/Card14"
                android:layout_below="@id/Card11"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="280dp"
                android:orientation="vertical"
                android:background="@color/colorPrimaryDark"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/ToggleLedRojo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="0dp"
                        android:layout_marginBottom="0dp"
                        android:text="TOGGLE"/>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            // Fin boton rojo
        </RelativeLayout>



    </LinearLayout>
</ScrollView>