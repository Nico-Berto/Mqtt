<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TituloApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Control FRDM-KL 46Z"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal" />

            //Inicio Card 1

            <androidx.cardview.widget.CardView
                android:id="@+id/Card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_below="@id/TituloApp"
                android:background="@color/colorPrimaryDark"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    //Titulo card1
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Estados de Switchs"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:layout_gravity="center_horizontal" />

                    //Switch1
                    <Switch
                        android:id="@+id/Switch1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:layout_margin="10dp"
                        android:text="Switch 1"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/md_grey_600"/>

                    //Switch2
                    <Switch
                        android:id="@+id/Switch2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:layout_margin="10dp"
                        android:text="Switch 2"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/md_grey_600"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            //Fin Card 1

            <LinearLayout
                android:id="@+id/SecPot"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/Card1"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                //Inicio Card2

                <androidx.cardview.widget.CardView
                    android:id="@+id/Card2"
                    android:layout_width="120dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:background="@color/colorPrimaryDark"
                    app:cardCornerRadius="20dp">

                    //Inicio Gauge 1
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        //Titulo Gauge 1
                        <TextView
                            android:id="@+id/TituloGauge1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Cantidad de Luz"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal" />



                        <pl.pawelkleczkowski.customgauge.CustomGauge
                            android:id="@+id/gauge1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/TituloGauge1"
                            android:layout_centerHorizontal="true"
                            android:padding="10dp"
                            app:gaugeEndValue="100"
                            app:gaugePointEndColor="@color/md_blue_800"
                            app:gaugePointStartColor="@color/md_blue_300"
                            app:gaugeStartAngle="135"
                            app:gaugeStartValue="0"
                            app:gaugeStrokeCap="ROUND"
                            app:gaugeStrokeColor="@color/md_grey_400"
                            app:gaugeStrokeWidth="10dp"
                            app:gaugeSweepAngle="270" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/valueGauge1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="145dp"
                            android:text="1"
                            android:textSize="15dp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal" />


                    </LinearLayout>
                    //Fin Gauge 1


                </androidx.cardview.widget.CardView>

                //Fin Card2

                //Inicio Card3

                <androidx.cardview.widget.CardView
                    android:id="@+id/Card3"
                    android:layout_width="120dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:background="@color/colorPrimaryDark"
                    app:cardCornerRadius="20dp">

                    //Inicio Gauge 2
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        //Titulo Gauge 2
                        <TextView
                            android:id="@+id/TituloGauge2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="AceleraciÃ³n"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal" />



                        <pl.pawelkleczkowski.customgauge.CustomGauge
                            android:id="@+id/gauge2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/TituloGauge2"
                            android:layout_centerHorizontal="true"
                            android:padding="10dp"
                            app:gaugeEndValue="100"
                            app:gaugePointEndColor="@color/md_green_800"
                            app:gaugePointStartColor="@color/md_green_300"
                            app:gaugeStartAngle="135"
                            app:gaugeStartValue="0"
                            app:gaugeStrokeCap="ROUND"
                            app:gaugeStrokeColor="@color/md_grey_400"
                            app:gaugeStrokeWidth="10dp"
                            app:gaugeSweepAngle="270" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/valueGauge2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="145dp"
                            android:text="1"
                            android:textSize="15dp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:gravity="center_horizontal" />


                    </LinearLayout>
                    //Fin Gauge 2

                </androidx.cardview.widget.CardView>

                //Fin Card3

                //Inicio Card3.1

                <androidx.cardview.widget.CardView
                    android:id="@+id/Card31"
                    android:layout_width="120dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:background="@color/colorPrimaryDark"
                    app:cardCornerRadius="20dp">

                    //Inicio Gauge 2
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        //Titulo Gauge 31
                        <TextView
                            android:id="@+id/TituloGauge31"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Humedad"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal" />



                        <pl.pawelkleczkowski.customgauge.CustomGauge
                            android:id="@+id/gauge31"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/TituloGauge31"
                            android:layout_centerHorizontal="true"
                            android:padding="10dp"
                            app:gaugeEndValue="100"
                            app:gaugePointEndColor="@color/md_green_800"
                            app:gaugePointStartColor="@color/md_yellow_500"
                            app:gaugeStartAngle="135"
                            app:gaugeStartValue="0"
                            app:gaugeStrokeCap="ROUND"
                            app:gaugeStrokeColor="@color/md_grey_400"
                            app:gaugeStrokeWidth="10dp"
                            app:gaugeSweepAngle="270" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/valueGauge3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="145dp"
                            android:text="1"
                            android:textSize="15dp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:gravity="center_horizontal" />


                    </LinearLayout>
                    //Fin Gauge 3

                </androidx.cardview.widget.CardView>
    // Fin card31
            </LinearLayout>

            //Inicio card4
            <androidx.cardview.widget.CardView
                android:id="@+id/Card4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/SecPot"
                android:layout_margin="10dp"
                android:background="@color/colorPrimaryDark"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    //Titulo card4
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Temperatura Raspberry"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:layout_gravity="center_horizontal" />



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/textTempRpi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="__._Â°C"
                            android:textStyle="bold"
                            android:layout_margin="10dp"
                            android:textSize="40dp"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"/>


                    </RelativeLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            //Fin card4

            //Inicio card5
            <androidx.cardview.widget.CardView
                android:id="@+id/Card5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Card4"
                android:layout_margin="10dp"
                android:background="@color/colorPrimaryDark"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    //Titulo card5
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Temperatura en tiempo real"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:layout_gravity="center_horizontal" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/textTemp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="__._Â°C"
                            android:textStyle="bold"
                            android:layout_margin="10dp"
                            android:textSize="40dp"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"/>


                    </RelativeLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            //Fin card5

            // Inicio card 6


            // Fin card 6

        </RelativeLayout>



    </LinearLayout>
</ScrollView>